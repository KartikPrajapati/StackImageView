<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.kartikp.stackimageview.customviews.StackImageView
        android:id="@+id/stackImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:siv_circular_image_border_color="#FF3F11"
        app:siv_circular_image_border_width="4dp"
        app:siv_circular_image_dimen="60dp"
        app:siv_circular_image_loader_color="#FF3F11"
        app:siv_circular_image_loader_dimen="20dp"
        app:siv_circular_image_loader_visible="true"
        app:siv_circular_image_loading_failed_bg_color="#757575"
        app:siv_circular_image_place_holder="@drawable/ic_star_icon"
        app:siv_circular_image_place_holder_dimen="20dp"
        app:siv_circular_image_place_holder_visible="true"
        app:siv_count_view_bg_color="#757575"
        app:siv_count_view_border_color="#FF3F11"
        app:siv_count_view_border_width="4dp"
        app:siv_count_view_dimen="60dp"
        app:siv_count_view_image_dimen="20dp"
        app:siv_count_view_image_instead_of_text="true"
        app:siv_count_view_image_source="@drawable/ic_star_icon"
        app:siv_count_view_position="before"
        app:siv_count_view_text_color="#FFFFFF"
        app:siv_count_view_text_font="@font/lobster"
        app:siv_count_view_text_size="20sp"
        app:siv_gap_between_views="-10dp"
        app:siv_max_visible_circular_image="3"/>

</LinearLayout>
